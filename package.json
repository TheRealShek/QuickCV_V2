{
  "name": "quickcv-v2",
  "version": "1.0.0",
  "description": "ATS-friendly resume builder with text-based PDF generation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch server.ts & cd frontend && bun run dev",
    "type-check": "tsc --noEmit",
    "server": "bun run server.ts",
    "server:dev": "bun --watch server.ts",
    "vercel-build": "npm run build && cd frontend && npm run build"
  },
  "keywords": [
    "resume",
    "cv",
    "pdf",
    "ats",
    "resume-builder"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pdfkit": "^0.15.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^20.11.5",
    "@types/pdfkit": "^0.13.4",
    "@vercel/node": "^3.0.0",
    "typescript": "^5.3.3",
    "vercel": "^50.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
